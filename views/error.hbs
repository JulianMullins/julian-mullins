	<body class="container-fluid">
    <header class="header-inverted">
      {{#if error.status}}
        <a href="/"><h1 class="main-title">{{error.status}}</h1></a>
      {{else}}
        <a href="/"><h1 class="main-title">{{message}}</h1></a>
      {{/if}}
    </header>

    <main class="main-scrollable">
      <section class="subject-heading">
        <div class="subject-cover">
          {{#if error.stack}}
            <pre>{{error.stack}}</pre>
          {{else}}
            <img src="../images/404dog.jpg">
          {{/if}}
        </div>
        <div class="subject-title">
          {{#if error.status}}
            <h2>{{error.status}}</h2>
          {{/if}}
          {{#if error.desc}}
            <h3>{{error.desc}}</h3>
          {{/if}}
          <p>{{message}}</p>
          <a href="/" class="action">Return Home</a>
        </div>
      </section>

      <section>
      </section>
    </main>
	</body>

