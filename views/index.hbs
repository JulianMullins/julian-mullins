<div class="main">
	<!-- landing section -->
	<section id="section1">
		<!-- <h2 class="page-name" id="hello">hello</h2> -->

		<div class="main-header">
			<h1 class="main-title">{{title}}</h1>
			<h3 class="main-subtitle">{{subtitle}}</h3>
		</div>

		<nav>
			<ul>
				<a href="#section2" id="nav-works"><li>works</li></a>
				<a href="#section3" id="nav-about"><li>about</li></a>
				<a href="#section4" id="nav-contact"><li>contact</li></a>
			</ul>
		</nav>

		<div class="highlights-container">
			<a href="#">
				<div class="highlight">
					<div class="highlight-image">
						<img src="../images/cortex-mockups.png">
					</div>
					<div class="highlight-content">
						<h2>Cortex Game</h2>
						<p>Product Manager / Front-End</p>
					</div>
				</div>
			</a>
			<a href="#">
				<div class="highlight">
					<div class="highlight-image">
						<img src="../images/treadstone-mockups.png">
					</div>
					<div class="highlight-content">
						<h2>TreadStone Studios</h2>
						<p>Graphic Design</p>
					</div>
				</div>
			</a>
			<a href="#">
				<div class="highlight">
					<div class="highlight-image">
						<img src="../images/treadstone-mockups.png">
					</div>
					<div class="highlight-content">
						<h2>TreadStone Studios</h2>
						<p>Graphic Design</p>
					</div>
				</div>
			</a>
		</div>


		<img src="../images/arrow-down.svg" class="next-page">
	</section>

	<!-- portfolio/work section -->
	<section id="section2">
		<h2 class="page-name">works</h2>
		<div class="highlights-container">

			{{#each work}}
			<a href="{{this.slug}}">
				<div class="highlight">
					<div class="highlight-image">
						<img src="../images/{{this.img}}">
					</div>
					<div class="highlight-content">
						<h2>{{this.name}}</h2>
						<p>{{this.role}}</p>
					</div>
				</div>
			</a>
			{{/each}}

		</div>
	</section>

	<!-- about me section -->
	<section id="section3">
		<h2 class="page-name">about</h2>

		<div class="profile-container">
			<div class="infobar-container">
				<div class="profile-pic-container">
					<div class="picture-border">
						<img src="../images/profile-pic.jpg" class="profile-pic">
					</div>

					<!-- front-loading images to enhance animations -->
					<img src="../images/ballet.jpg" class="visuallyhidden">
					<img src="../images/break-dance.jpg" class="visuallyhidden">
					<img src="../images/costa-rica.jpg" class="visuallyhidden">
					<img src="../images/spain.jpg" class="visuallyhidden">
					<img src="../images/trance.jpg" class="visuallyhidden">
					<!-- end -->

					<a href="./JulianMullins.pdf" target="_blank" class="resume-btn">Résumé</a>
				</div>
				<div class="facts-container">
					<div class="factoid-container">
						<h4 id="fun-fact">Fun facts about me</h4>
					</div>
					<div class="refresh-container">
						<img src="../images/arrow-right.svg">
					</div>
				</div>
			</div>

			<div class="profile-content">
				<h2>Hi, I'm Julian Mullins.</h2>
				<p>I'm an entrepreneur, designer and developer from Eugene, Oregon. As a coding bootcamp attendee and self-taught designer, I am a firm believer in life-long learning and a passionate creator of new things.</p>
				<p></p>
			</div>
		</div>
	</section>

	<!-- contact/social media section -->
	<section id="section4">
		<h2 class="page-name">contact</h2>
		<div class="contact-content">
			<p>Looking to collaborate on a project, need design or development help, or simply want to chat? I'm usually found somewhere around the globe, but thanks to the Internet, feel free to reach out at any time! I look forward to hearing from you.</p>
			<div class="contact-buttons">
					<a class="contact-button" href="mailto:mullinsjulian@gmail.com">
						<span class="glyphicon glyphicon-send"></span>
						Email
					</a>
					<a class="contact-button">
						<span class="glyphicon glyphicon-refresh"></span>
						LinkedIn
					</a>
					<a class="contact-button">
						<span class="glyphicon glyphicon-refresh"></span>
						Instagram
					</a>
			</div>
		</div>
	</section>
</div>
